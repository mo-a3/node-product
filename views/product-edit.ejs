<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  </head>
  <body>
    <script type="text/javascript">
      var updateProduct = function(){
        var id = $("#id").val();
        var name = $("#name").val();
        var brand = $("#brand").val();
        var category = $("#category").val();
        var rating = $("#rating").val();
        var price = $("#price").val();
        var orderdate = $("#orderdate").val();
        var data = {id,name,brand,category,rating,price,orderdate};
        fetch('/api/product'
        ,{
          method: 'PUT',
          headers : { 
            'Content-Type': 'application/json',
            'Accept': 'application/json'
           },
          body:JSON.stringify(data)
        })
        .then(response => response.json())
        .then(function(response){
          if(response.result == "success"){
            location = "/product";
          }
      });
      }
    </script>
    <h1><%= title %></h1>
    <input id="id" type="" placeholder="id" value='<%= product.id %>' readonly > <br/><br/>
    <input id="name" type="" placeholder="Name" value='<%= product.name %>' name=""> <br/><br/>
    <input id="brand" type="" placeholder="Email" value='<%= product.brand %>' name=""> <br/><br/>
    <input id="category" type="" placeholder="Phone" value='<%= product.category %>' name=""> <br/><br/>
    <input id="rating" type="" placeholder="Address"value='<%= product.rating %>'  name=""> <br/><br/>
    <input id="price" type="" placeholder="Address"value='<%= product.price %>'  name=""> <br/><br/>
    <input id="orderdate" type="" placeholder="Address"value='<%= product.orderdate %>'  name=""> <br/><br/>
    <input type="button" name="" onclick="updateProduct()" value="Update">
  </body>
</html>
